{
  "name": "coin-bot",
  "version": "2.0.0",
  "description": "Discord bot to manager cryptocurrencies in binance exchange",
  "keywords": [
    "bot",
    "typescript",
    "discord-js",
    "cryptocurrence",
    "bitcoin",
    "binance",
    "exchange"
  ],
  "main": "dist/src/index.js",
  "author": {
    "name": "Edixon Alberto",
    "email": "edixonalberto@gmail.com"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rm -f ./dist ./store.json ",
    "lint": "prettier --write ./src/**/*.ts",
    "prod": "node -r ./.env -r ./dist/src/config -r ./dist/src",
    "dev": "ts-node -r ./.env -r ./src/config -r ./src",
    "start:prod": "yarn run build && yarn run prod",
    "start:dev": "nodemon -e ts -w ./src --exec \"clear && yarn run dev\"",
    "build": "tsc",
    "start": "node -r ./dist/src/config -r ./dist/src"
  },
  "dependencies": {
    "axios": "0.19.2",
    "discord.js": "12.0.1",
    "lowdb": "^1.0.0"
  },
  "devDependencies": {
    "@types/lowdb": "^1.0.9",
    "@types/node": "^13.7.4",
    "@types/unique-string": "^2.0.0",
    "@types/ws": "^7.2.2",
    "dotenv": "8.2.0",
    "nodemon": "^2.0.2",
    "prettier": "1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  },
  "engines": {
    "node": "12.13.0",
    "yarn": "1.19.1"
  }
}